<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="Game Tournament Title" />

        <TextView

            android:id="@+id/tournament_country"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/darker_gray"
            tools:text="Tournament Country" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tournament_full_name"
            android:layout_width="176dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:textSize="9sp"

            tools:text="Game Tournament Title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="0.04"
            android:padding="5dp"
            android:src="@drawable/ic_multiple_users_silhouette" />

        <TextView
            android:id="@+id/tournament_team_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="12" />

        <TextView
            android:id="@+id/tournament_date"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.79"
            android:paddingTop="35dp"
            android:gravity="right"
            tools:text="09-09-2017" />

    </LinearLayout>


</LinearLayout>